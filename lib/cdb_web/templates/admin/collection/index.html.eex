<div class="pull-right">
  <%= link "Add new collection", to: admin_collection_path(@conn, :new), class: "btn btn-primary" %>
  <hr>
</div>


<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>State</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= for collection <- @collections do %>
      <tr>
        <td><%= link collection.title, to: collection_path(@conn, :show, collection.slug) %></td>
        <td>
          <%= if collection.published_at do %>
            <span class="label label-success">Published</span>
          <% else %>
            <span class="label label-default">Unpublished</span>
          <% end %>
        </td>

        <td class="text-right">
          <span><%= link "Edit", to: admin_collection_path(@conn, :edit, collection), class: "btn btn-default btn-xs" %></span>
          <span><%= link "Delete", to: admin_collection_path(@conn, :delete, collection), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-warning btn-xs" %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>